    "@typescript-eslint/parser": "5.19.0",
    "eslint": "8.13.0",
    "jest": "27.5.1",
    "jest-junit": "13.0.0",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
